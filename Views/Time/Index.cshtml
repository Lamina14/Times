@model System.Data.DataTable

@{
    ViewData["Title"] = "Lista de Time";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Time
            </th>
            <th>
                Estado
            </th>
            <th>
                Cores
            </th>
            <th>
                Técnico
            </th>
            <th>
                Imagem
            </th>
            <th>
                <a asp-action="AddOrEdit">Novo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {

            <tr>
                <td>
                    @Model.Rows[i]["Time"]
                </td>
                <td>
                    @Model.Rows[i]["Estado"]
                </td>
                <td>
                    @Model.Rows[i]["Cores"]
                </td>
                <td>
                    @Model.Rows[i]["Tecnico"]
                </td>
                <td>
                    @Model.Rows[i]["Image"]
                </td>

                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["Timeid"]">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Timeid"]">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
